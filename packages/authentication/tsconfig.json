{
    "extends": "@medieteknik/typescript-config/tsconfig.base.json",
    "include": [
        "src/**/*"
    ],
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "forceConsistentCasingInFileNames": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}