{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node-terminal",
            "name": "Frontend (Next.js): dev",
            "cwd": "${workspaceFolder}\\frontend",
            "request": "launch",
            "command": "npm run dev",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "sourceMaps": true,
            "serverReadyAction": {
                "pattern": "- Local:.+(http?://.+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        }
    ]
}